.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 状态卡片样式 */
.status-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.status-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.last-update {
  font-size: 24rpx;
  color: #999;
}

.status-content {
  text-align: center;
}

/* 状态指示器 */
.status-indicator {
  display: inline-block;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  margin-bottom: 30rpx;
  font-weight: bold;
  font-size: 32rpx;
}

.status-indicator.idle {
  background-color: #e8f5e8;
  color: #4CAF50;
}

.status-indicator.in_use {
  background-color: #fff3e0;
  color: #ff9800;
}

.status-indicator.maintenance {
  background-color: #ffebee;
  color: #f44336;
}

/* 使用信息 */
.usage-info {
  text-align: left;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-top: 20rpx;
}

.user-info {
  margin-bottom: 15rpx;
}

.using-by {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.time-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.start-time, .end-time {
  font-size: 26rpx;
  color: #666;
}

.remaining-time {
  text-align: center;
  background-color: #fff3e0;
  padding: 15rpx;
  border-radius: 10rpx;
}

.remaining-time text {
  font-size: 28rpx;
  color: #ff9800;
  font-weight: bold;
}

/* 操作按钮样式 */
.action-buttons {
  margin-bottom: 30rpx;
}

.action-btn {
  width: 100%;
  padding: 25rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.start-btn {
  background-color: #4CAF50;
  color: white;
}

.finish-btn {
  background-color: #2196F3;
  color: white;
}

.disabled-btn {
  background-color: #e0e0e0;
  color: #999;
}

/* 预约列表样式 */
.reservations {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.reservation-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.reservation-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 10rpx;
}

.reservation-user {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.reservation-time {
  font-size: 26rpx;
  color: #666;
}

/* 快捷操作样式 */
.quick-actions {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.quick-btn-group {
  display: flex;
  gap: 20rpx;
}

.quick-btn {
  flex: 1;
  padding: 20rpx;
  background-color: #f8f9fa;
  border: none;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #333;
}

.quick-btn:active {
  background-color: #e9ecef;
}

/* 使用提示样式 */
.tips {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tips-content text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
} 