.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.reserve-header {
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 预约表单样式 */
.reserve-form {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.form-section {
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.date-picker, .time-picker {
  margin-bottom: 20rpx;
}

.picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  border: 1rpx solid #e9ecef;
}

.picker-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.picker-value {
  font-size: 28rpx;
  color: #666;
}

.reserve-btn {
  width: 100%;
  padding: 25rpx;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.reserve-btn.disabled {
  background-color: #e0e0e0;
  color: #999;
}

/* 预约列表样式 */
.my-reservations, .all-reservations {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.empty-state {
  text-align: center;
  padding: 50rpx 0;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

.reservation-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.reservation-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  border: 1rpx solid #e9ecef;
}

.reservation-info {
  flex: 1;
}

.reservation-user {
  margin-bottom: 8rpx;
}

.user-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.reservation-time {
  margin-bottom: 8rpx;
}

.time-text {
  font-size: 26rpx;
  color: #666;
}

.reservation-status {
  margin-bottom: 8rpx;
}

.status-text {
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.status-text.active {
  background-color: #e8f5e8;
  color: #4CAF50;
}

.status-text.completed {
  background-color: #e3f2fd;
  color: #2196F3;
}

.status-text.cancelled {
  background-color: #ffebee;
  color: #f44336;
}

.reservation-actions {
  margin-left: 20rpx;
}

.cancel-btn {
  padding: 15rpx 25rpx;
  background-color: #f44336;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 24rpx;
} 